{   "$schema": "http://json-schema.org/draft-07/schema#",
    "type" : "object",
    "description": "schema for a nanotune config file",
    "properties":{
        "username": {
            "description": "name of nanotune user",
            "type" : "string"
        },
        "main_db": {
            "description": "name of default database",
            "type" : "string"},
        "db_folder": {
            "description": "path of folder where default database is located",
            "type" : "string"},

        "core": {
            "description": "name of default database",
            "type" : "object",
            "properties": {
                "meta_add_on": {
                    "description": "",
                    "type":"string",
                    "default": "nanotune_meta"}
                },
                "meta_fields": {
                    "description": "fields under which nanotune specific metadata is saved",
                    "type": "array",
                    "default": ["n_points", "elapsed_time", "max_jumps",
                                "ramp_rate", "write_period",
                                "normalization_constants", "device_name",
                                "features", "predicted_category",
                                "signal_types", "git_hash"]
                },
                "implemented": {
                    "description": "implemented tuning stages",
                    "type": "array",
                    "default": ["gatecharacterization1d",
                                "gatecharacterization2d",
                                "chargediagram"]
                },
                "setpoint": {
                    "description": "method to compute/define setpoints",
                    "type": "string",
                    "default": "linear"
                },
                "data_types": {
                    "description": "",
                    "type": "object",
                    "properties": {
                        "signal": {
                            "description": "",
                            "type": "integer",
                            "default": 0
                        },
                        "frequencies": {
                            "description": "",
                            "type": "integer",
                            "default": 1
                        },
                        "gradient": {
                            "description": "",
                            "type": "integer",
                            "default": 2
                        },
                        "features": {
                            "description": "",
                            "type": "integer",
                            "default": 3
                        }
                    }
                },
                "standard_shapes": {
                    "description": "",
                    "type": "object",
                    "properties": {
                        "1": {
                            "description": "",
                            "type": "array",
                            "default": [100]
                        },
                        "2": {
                        "description": "",
                        "type": "array",
                        "default": [50, 50]
                        }
                    }
                },
                "fill_value": {
                    "description": "",
                    "type": "array",
                    "default": [999999]
                },
                "dot_mapping": {
                    "description": "",
                    "type": "object",
                    "properties": {
                        "singledot": {
                            "description": "",
                            "type": "array",
                            "default": [0, 1]
                        },
                        "doubledot": {
                            "description": "",
                            "type": "array",
                            "default": [2, 3]
                        },
                        "dotregime": {
                            "description": "",
                            "type": "array",
                            "default": [1, 3]
                        },
                        "bothpoor": {
                            "description": "",
                            "type": "array",
                            "default": [4]
                        }
                    }
                },
                "labels": {
                    "description": "",
                    "type": "object",
                    "properties": {
                        "pinchoff": {
                            "description": "",
                            "type": "string",
                            "default": "Pinch-off"
                        },
                        "coulomboscillation": {
                            "description": "",
                            "type": "string",
                            "default": "Coulomb oscillations"
                        },
                        "leadcoupling": {
                            "description": "",
                            "type": "string",
                            "default": "Coupling to leads"
                        },
                        "singledot":{
                            "description": "",
                            "type": "string",
                            "default": "Single dot"
                        },
                        "doubledot":{
                            "description": "",
                            "type": "string",
                            "default": "Double dot"
                        },
                        "coulombdiamonds":{
                            "description": "",
                            "type": "string",
                            "default": "Coulomb diamonds"
                        },
                        "zerobiaspeak":{
                            "description": "",
                            "type": "string",
                            "default": "Zero bias peak"
                        },
                        "good":{
                            "description": "",
                            "type": "string",
                            "default": "Good"
                        },
                        "other":{
                            "description": "",
                            "type": "string",
                            "default": "Other"
                        }
                    }
                },
                "features": {
                    "description": "",
                    "type": "object",
                    "properties": {
                        "pinchoff": {
                            "description": "",
                            "type": "array",
                            "default": ["amplitude", "slope", "low_signal", "high_signal",
                                    "residuals", "offset", "transition_signal",
                                    "low_voltage", "high_voltage", "transition_voltage"]
                            },
                        "outerbarriers": {
                            "description": "",
                            "type": "array",
                            "default": ["corner"]
                        },
                        "singledot": {
                            "description": "",
                            "type": "array",
                            "default": ["snr"]
                        },
                        "doubledot": {
                            "description": "",
                            "type": "array",
                            "default": ["snr"]
                        },
                        "dotregime": {
                            "description": "",
                            "type": "array",
                            "default": ["snr"]
                        },
                        "coulomboscillation": {
                            "description": "",
                            "type": "array",
                            "default": ["snr"]
                        }
                    }
                },
                "actions": {
                    "description": "",
                    "type": "object",
                    "properties": {
                        "general": {
                            "description": "",
                            "type": "object",
                            "properties": {
                                "0": {
                                    "description": "",
                                    "type": "string",
                                    "default": "x more negative"
                                },
                                "1": {
                                    "description": "",
                                    "type": "string",
                                    "default": "x more positive"
                                },
                                "2": {
                                    "description": "",
                                    "type": "string",
                                    "default":"random uniform"
                                }
                            }
                        },
                        "pinchoff": {
                            "description": "",
                            "type": "object",
                            "properties": {
                                "0": {
                                    "description": "",
                                    "type": "string",
                                    "default": "x more negative"
                                },
                                "1": {
                                    "description": "",
                                    "type": "string",
                                    "default": "x more positive"
                                },
                                "2": {
                                    "description": "",
                                    "type": "string",
                                    "default": "auxiliary more negative"
                                },
                                "3": {
                                    "description": "",
                                    "type": "string",
                                    "default": "auxiliary more positive"
                                }
                            }
                        },
                        "outerbarriers": {
                            "description": "",
                            "type": "object",
                            "properties": {
                                "0": {
                                    "description": "",
                                    "type": "string",
                                    "default": "x more negative"
                                },
                                "1": {
                                    "description": "",
                                    "type": "string",
                                    "default": "x more positive"
                                },
                                "2": {
                                    "description": "",
                                    "type": "string",
                                    "default": "y more negative"
                                },
                                "3": {
                                    "description": "",
                                    "type": "string",
                                    "default": "y more positive"
                                }
                            }
                        },
                        "chargediagram": {
                            "description": "",
                            "type": "object",
                            "properties": {
                                "0": {
                                    "description": "",
                                    "type": "string",
                                    "default": "x more negative"
                                },
                                "1": {
                                    "description": "",
                                    "type": "string",
                                    "default": "x more positive"
                                },
                                "2": {
                                    "description": "",
                                    "type": "string",
                                    "default": "y more negative"
                                },
                                "3": {
                                    "description": "",
                                    "type": "string",
                                    "default": "y more positive"
                                }
                            }
                        }
                    }
                },
                "termination_reasons": {
                    "description": "",
                    "type": "object",
                    "properties": {
                        "0": {
                            "description": "",
                            "type": "string",
                            "default": "x reached lower limit"
                        },
                        "1": {
                            "description": "",
                            "type": "string",
                            "default": "x reached upper limit"
                        },
                        "2": {
                            "description": "",
                            "type": "string",
                            "default": "y reached lower limit"
                        },
                        "3": {
                            "description": "",
                            "type": "string",
                            "default": "y reached upper limit"
                        },
                        "4": {
                            "description": "",
                            "type": "string",
                            "default": "auxiliary reached lower limit"
                        },
                        "5": {
                            "description": "",
                            "type": "string",
                            "default": "auxiliary reached upper limit"
                        },
                        "6": {
                            "description": "",
                            "type": "string",
                            "default": "max count achieved"
                        },
                        "7": {
                            "description": "",
                            "type": "string",
                            "default": "error"
                        }
                    }
                }
            },
        "plotting": {
            "description": "",
            "type": "object",
            "properties": {
                "backend": {
                    "description": "",
                    "type": "string",
                    "default": "ps"
                }
            }

        }
    }
}
